# cd
alias u='cd ..'
alias c='cd'
alias and='&&'
alias code='cd ~/Development/Rails'
alias ospr='open http://simplypayrent.local/'
alias olh='open http://localhost:3000/'
alias tr='touch tmp/restart.txt'
alias trospr='tr && ospr'


# ls
alias ls="ls -F"
alias l="ls -alsh"
alias ll="ls -l"
alias la='ls -A'

#jfiles
alias jf="cd ~/.jfiles/"
alias jfe="vim ~/.jfiles/"

# git
alias gad='git add .'
alias gl='git pull'
alias glm='git pull origin master'
alias glp='git pull origin production'
alias gp='git push'
alias gpm='git push origin master'
alias gpp='git push origin production'
alias gd='git diff'
alias gc='git commit'
alias gchm='git checkout master'
alias gchp='git checkout production'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"

# cap
alias capp='cap production deploy'

# rails
alias rc='rails console'
alias rs='rails server'
alias rg='rails generate'
alias a='autotest -rails'
alias tlog='tail -f log/development.log'
alias migrate='rake db:migrate db:test:clone'
alias rst='touch tmp/restart.txt'
alias c='clear'

# commands starting with % for pasting from web
alias %=' '
